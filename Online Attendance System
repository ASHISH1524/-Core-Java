class save extends Frame implements ActionListener
{   Frame h=new Frame();
    TextField n=new TextField();
    Button bh=new Button("EXIT");
	save(String count)
	{
	     h.setSize(400,400);
	     n.setBounds(100,50,60,20);
	     n.setFont(new Font("Tahoma",Font.PLAIN,20));
	     bh.setBounds(150,150,40,40);
	     h.add(bh);
	     h.add(n);
	     h.setVisible(true);
	     h.setLayout(null);
	     n.setText(String.valueOf(count));
	     bh.addActionListener(this);
	     
	}

	@Override
	public void actionPerformed(ActionEvent p) {
		// TODO Auto-generated method stub
		if(p.getSource()==bh)
		{
		JOptionPane.showMessageDialog(null,"THANKYOU FOR USING");
		System.exit(-1);
		}
	}
	
}

public class login extends Frame implements ActionListener{
	
	

	Frame f1=new Frame();
	Label l3=new Label("LOGIN");
	Button b1=new Button();
	Button x=new Button();
	Label l1=new Label("User");                           
	TextField t1=new TextField(30);
	Label l2=new Label("Password");
	TextField t2=new TextField(30);
	public login() 
	{
		f1.setVisible(true);
		f1.setLayout(null);
		f1.setBounds(100,100,450,364);
	x= new Button("CANCEL");
	b1 = new Button("Login");
	l1.setBounds(43,79,107,34);
	t1.setBounds(206,79,167,30);
	l2.setBounds(43,147,107,34);
	t2.setBounds(206,147,168,34);
	b1.setBounds(57,232,89,23);
	x.setBounds(170,232,89,23);
	
	l3.setBounds(126,35,142,24);
	l3.setFont(new Font("Tahoma",Font.PLAIN,20));
	f1.add(l3);
	f1.add(l1);
	f1.add(t1);
	f1.add(l2);
	f1.add(t2);
	f1.add(b1);
	f1.add(x);
	b1.addActionListener(this);
    x.addActionListener(this);
	}

	public static void main(String[] args) {
		login f=new login();
	}

	
	public void actionPerformed(ActionEvent e)
	{
		String u=t1.getText();
		String p=t2.getText();
		
		if(e.getSource()==b1)
		{ if(u.equals("java") && p.equals("java"))
		{
			JOptionPane.showMessageDialog(null,"you are loged in");
			
			third tx=new third();
		}		

		}
		else if(e.getSource()==x)
		{
			JOptionPane.showMessageDialog(null,"Thankyou for using the application");
			System.exit(-1);
		}
     		
		
	}

}
