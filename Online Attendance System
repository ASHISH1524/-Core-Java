class third extends Frame implements ActionListener
{ 
	Frame u=new Frame();
	Label le=new Label("ENTER THE SUBJECT");
	Button ba1=new Button("JAVA");
	Button ba2=new Button("CAO");
	Button ba3=new Button("OS");
	Button ba4=new Button("DS");
	  third()
	   {
		  u.setVisible(true);
			u.setLayout(null);
			u.setBounds(100,100,500,500);
		  u.setTitle("ENTER THE SUBJECT");

         ba1.setBounds(100,200,80,40);
         ba2.setBounds(190,200,80,40);
         ba3.setBounds(280,200,80,40);
         ba4.setBounds(370,200,80,40);
         le.setBounds(60,100,400,60);
         le.setFont(new Font("Tahoma",Font.PLAIN,30));
         u.add(le);
		u.add(ba1);
	    u.add(ba2);
	    u.add(ba4);
		u.add(ba3);
	    ba1.addActionListener(this);
	    ba2.addActionListener(this);
	    ba3.addActionListener(this);
	    ba4.addActionListener(this);
      }
       
	
	public void actionPerformed(ActionEvent z) 
	{
		if(z.getSource()==ba1)
		{
	     second s1=new second();
			//System.exit(-1);
	    }
		else if(z.getSource()==ba2)
		{
			second s1=new second();
			//System.exit(-1);
			}
		else if(z.getSource()==ba3)
		{
			second s1=new second();
			//System.exit(0);
			}
		else if(z.getSource()==ba4)
		{
			second s1=new second();
			//System.exit(-1);
			}
		
	
	}
	
}

